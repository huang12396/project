@using Microsoft.AspNetCore.Identity
@using WebApplication2.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <p>欢迎您，@UserManager.GetUserName(User)!</p>
            </li>
            <li>
                <button  type="submit" class="btn btn-link navbar-btn navbar-link"><span class="glyphicon glyphicon-log-out">注销</span></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register"><span class="glyphicon glyphicon-user">注册</span></a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"><span class="glyphicon glyphicon-log-in">登录</span></a></li>
    </ul>
}
