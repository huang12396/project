<body>
<div class="col-offset-0 bg">
    <div class="col-sm-offset-7 col-sm-4 login">
        <div class="login-top">
            <h2>账号登录</h2>
            <section>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <!--账号-->
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="col-sm-2 control-lable">用户名</label>
                        <div class="col-sm-9">
                            <input asp-for="Email" type="text" id="name" class="form-control" placeholder="请输入用户名" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                    </div>
                    <!--密码-->
                    <div class="form-group">
                        <label asp-for="Password" class="col-sm-2 control-lable">密码</label>
                        <div class="col-sm-9 ">
                            <input asp-for="Password" type="password" id="password" class="form-control" placeholder="请输入密码">
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                    </div>
                    <!--自动登录-->
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-7">
                            <div class="checkbox">
                                <label asp-for="RememberMe" class="auto-login">
                                    <input asp-for="RememberMe" @*type="checkbox"*@>自动登录

                                </label>
                                <label class="forget-password">
                                    <a asp-controller="Order" asp-action="Order">忘记密码</a>
                                </label>
                            </div>
                        </div>
                    </div>
                    <!--登陆按钮-->
                    <div class="form-group">
                        <div class="forgot col-sm-offset-2 col-sm-8">

                            <input class="bt1" type="submit" value="登录">
                        </div>
                    </div>
                </form>
                </section>
</div>
        <!--新用户注册-->
        <div class="login-bottom">
            <h3>新用户&nbsp;<a asp-area="" asp-controller="Account" asp-action="Register">注册</a></h3>
        </div>
    </div>
</div>
