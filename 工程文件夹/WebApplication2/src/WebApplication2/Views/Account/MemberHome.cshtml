@model WebApplication2.Models.MemberHomeModel
@{
    ViewBag.Title = "会员中心";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/assets/js/member.js"></script>
}
<style>
    body {
        text-align: center;
    }

    .cen {
        margin: 0 auto;
        width: 500px;
        height: 800px;
  border: 1px solid rgb(221, 221, 221);
        border-width:1px;
       
    background-color: #e0e9e0;
    border-radius: 18px 18px 0 0;
    padding: 30px 40px;
    opacity: 0.7;
}

    

    table {
        border: 1px;
        width: 300px;
        height: 300px;
        line-height:10px;
    }

    .td1 {
        width: 60px;
        text-align: right;
    }

    .td2 {
        width: 180px;
        text-align: center;        
    }
</style>

<div class="cen">
    <h3>会员信息</h3>
    <input type="hidden" id="userId" value="@ViewBag.uid" />
    <table>
        <tr>
            <td class="td1">性别</td>
            <td class="td2">
                <input type="text" id="memberSex" name="memberSex" readOnly="true" value="@Model.CustomerInfo.CustomerSex">
            </td>
        </tr>
        <tr>
            <td class="td1">联系电话</td>
            <td class="td2">
                <input type="text" id="memberTel" name="memberTel" readOnly="true" value="@Model.CustomerInfo.CustomerTel">
            </td>
        </tr>
        <tr>
            <td class="td1">QQ号码</td>
            <td class="td2">
                <input type="text" id="memberQq" name="memberQq" readOnly="true" value="@Model.CustomerInfo.QqNum">
            </td>
        </tr>
    </table>
    <br>
    <input type="button" ID="btnModiInfo" value="修改信息" onclick="javascript: modiInfo();" />
    <input type="button" ID="btnModiPWD" value="修改密码" onclick="javascript: modiPWD();" /><br /><br />
    <form id="baseInfo" class="col-md-12" asp-controller="Account" asp-action="MemberHome" method="post">
        <div id="pwdBlk" style="display:@ViewBag.pwdDisp">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" style="font:100">
                <label asp-for="OldPassword" class="col-md-5 control-label text-right"></label>
                <div class="col-md-7 text-left">
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="col-md-5 control-label text-right"></label>
                <div class="col-md-7 text-left">
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-5 control-label text-right"></label>
                <div class="col-md-7 text-left">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <button type="submit" class="btn btn-default">提交新密码</button>
                </div>
            </div>
        </div>
    </form>
</div>
